/*! @fronntui/styles NNMenu */

.nn-menu {
  display: inline-flex;
}

.nn-menu__trigger {
  display: flex;
  align-items: center;
  gap: var(--nn-spacing-1);
  padding-left: var(--nn-spacing-2);
  padding-right: var(--nn-spacing-2);
  height: 2rem;
  font-size: 0.75em;
}

.nn-menu__items {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: var(--nn-spacing-1);
}
