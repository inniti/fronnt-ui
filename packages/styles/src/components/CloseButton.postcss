/*! @fronntui/styles NNCloseButton */

.nn-close-button {
  display: flex;
  background: none;
  appearance: none;
  padding: var(--nn-spacing-1);
  margin: 0;
  border: 0;
  color: inherit;
  font-size: 0.625rem;
  color: var(--nn-color-gray-500);

  & .nn-raw-icon {
    stroke-width: calc(1 / 0.625 * var(--nn-icon-stroke-width));
  }

  &:focus {
    outline: none;
  }

  &:focus-visible,
  &:hover {
    color: var(--nn-color-gray-900);
    cursor: pointer;
  }
}
