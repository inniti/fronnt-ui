/*! @fronnt/styles NNPrice */
.nn-price {
  display: inline-flex;
  gap: 0.25em;
  color: var(--nn-color-text);
  font-weight: var(--nn-font-weight-bold);
  &.nn-price--strikethrough {
    color: var(--nn-color-subdued);
    position: relative;
    &::after {
      content: "";
      display: block;
      height: 1px;
      background: var(--nn-color-subdued);
      position: absolute;
      top: 60%;
      left: 0;
      right: 0;
    }
  }
}
