/*! @fronnt/styles NNTag */
.nn-tag {
  display: inline-flex;
  padding: 0.375rem 1rem;
  border-radius: 1.5rem;
  line-height: 1.5;
  border: var(--nn-stroke-width) solid currentColor;
  font-size: 0.75rem;
  text-transform: uppercase;
  color: var(--nn-color-primary);
  user-select: none;
  &.nn-tag--small {
    font-size: 0.6rem;
    padding: 0.15rem 0.4rem;
  }
}
