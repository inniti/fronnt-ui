/*! @fronntui/styles NNTag */

.nn-tag {
  display: inline-flex;
  padding: var(--nn-spacing-1) var(--nn-spacing-3);
  border-radius: 1.5rem;
  line-height: 1.5;
  border: var(--nn-stroke-width) solid currentcolor;
  text-transform: uppercase;
  color: var(--nn-color-primary);
  font-size: var(--nn-font-size-sm);
  letter-spacing: 0.03em;
  text-align: center;
  user-select: none;
}

.nn-tag--small {
  font-size: var(--nn-font-size-xs);
  padding: 0.15rem var(--nn-spacing-2);
}
