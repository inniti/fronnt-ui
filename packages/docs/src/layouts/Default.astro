---
import BaseLayout from "./_Base.astro";

interface Props {
  title: string;
  appendSiteTitle?: boolean;
}

const { title, appendSiteTitle } = Astro.props;
---

<BaseLayout title={title} appendSiteTitle={appendSiteTitle}>
  <main>
    <slot />
  </main>
</BaseLayout>

<style lang="scss">
  main {
    padding: 6rem var(--page-padding) 2rem;
    max-width: var(--page-max-width);
    margin: 0 auto;
  }
</style>
