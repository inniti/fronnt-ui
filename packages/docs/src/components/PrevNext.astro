---
interface Button {
  label: string;
  link: string;
}
interface Props {
  prev?: Button;
  next?: Button;
}
const { prev, next } = Astro.props;
---

<div class="prev-next" class:list={[!prev && !next && "prev-next--hidden"]}>
  {
    prev && (
      <a class="button" href={prev.link}>
        {prev.label}
      </a>
    )
  }
  {!prev && <div />}
  {
    next && (
      <a class="button" href={next.link}>
        {next.label}
      </a>
    )
  }
  {!next && <div />}
</div>

<style>
  .prev-next {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #eaeaea;
    padding-top: 1rem;
    margin-top: 3rem;
  }

  .prev-next--hidden {
    display: none;
  }

  .button {
    border: 1px solid currentColor;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 0.875rem;
    opacity: 0.5;
  }

  .button:hover,
  .button:focus {
    opacity: 1;
  }
</style>
